<div class="row column text-center">
<h2>Nuestros más nuevos productos</h2>
<hr>
</div>

<div class="row small-up-2 large-up-4">

<% @latest_products.each do |product| %>
  <div class="column">
    <%= image_tag product.image.url(:main), class: 'thumbnail' %>
    <h5><%= product.name %></h5>
    <p><%= product.price %></p>
    <a href="#" class="button expanded">Buy</a>
  </div>
<% end %>

</div>

<hr>
<div class="row column">
<div class="callout primary">
<h3>Tambíen podes ver los productos de oferta</h3>
</div>
</div>
<hr>
<div class="row column text-center">
<h2>Productos en oferta!</h2>
<hr>
</div>
<div class="row small-up-2 medium-up-3 large-up-6">

  <% @sale_products.each do |product| %>
    <div class="column">
    <%= image_tag product.image.url(:medium), class: 'thumbnail' %>
    <h5><%= product.name %></h5>
    <p><%= product.price %></p>
    <a href="#" class="button small expanded hollow">Buy</a>
    </div>
  <% end %>

</div>
<hr>
